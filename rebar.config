{deps, [
    grisp_updater_grisp2,
    grisp_connect,
    {epmd, {git, "https://github.com/erlang/epmd", {ref, "4d1a59"}}}
]}.

{erl_opts, [debug_info]}.

{plugins, [rebar3_grisp, rebar3_grisp_io]}.

{grisp, [
    {platform, grisp2},
    {otp, [
        {version, "27"}
    ]},
    % {build, [
    %     {toolchain, [{directory, "..."}]}
    % ]},
    {deploy, [
        {pre_script, "mkdir -p _deploy"},
        {destination, "_deploy"}
    ]}
]}.

{shell, [{apps, []}]}.

{relx, [
    {release, {grisp_auto_link, "0.1.0"}, [
        {grisp_updater_grisp2, load},
        grisp_updater,
        grisp_auto_link,
        {epmd, none}
    ]}
]}.
