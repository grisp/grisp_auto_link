{deps, [
    {grisp_io, {git, "git@github.com:grisp/grisp_io.git", {branch, "main"}}},
    {epmd, {git, "https://github.com/erlang/epmd", {ref, "4d1a59"}}}
]}.

{erl_opts, [debug_info]}.

{plugins, [rebar3_grisp]}.

{grisp, [
    {platform, grisp2},
    {otp, [
        {version, "25"}
    ]},
    % {build, [
    %     {toolchain, [{directory, "..."}]}
    % ]},
    {deploy, [
        % {pre_script, "mkdir -p _deploy"},
        {destination, "/Volumes/GRISP"}
    ]}
]}.

{shell, [{apps, []}]}.

{relx, [
    {release, {grisp_auto_link, "0.1.0"}, [grisp_auto_link, {epmd, none}]}
]}.
